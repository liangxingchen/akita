{
  "name": "akita",
  "version": "1.2.0",
  "description": "Http client for NodeJs / browser and WeChat, based on fetch()",
  "main": "lib/node.js",
  "browser": "lib/client.js",
  "miniprogram": "lib",
  "types": "index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "cross-env DEBUG=akita* tape test/ts.js",
    "cover": "cross-env DEBUG=akita* nyc node_modules/.bin/tape test/ts.js; nyc report --reporter=html",
    "eslint": "eslint",
    "eslint:fix": "eslint --fix",
    "prettier": "prettier -l src/** test/**",
    "prettier:fix": "prettier --write -l src/** test/**",
    "fix": "yarn eslint:fix && yarn prettier:fix",
    "prepublish": "npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liangxingchen/akita.git"
  },
  "author": {
    "name": "Liang",
    "email": "liang@miaomo.cn",
    "url": "https://github.com/liangxingchen"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/liangxingchen/akita/issues"
  },
  "homepage": "https://github.com/liangxingchen/akita#readme",
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      ".history",
      "coverage",
      "test",
      "lib",
      "**/*.d.ts",
      "*.js"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "resolutions": {
    "globals": "15.13.0",
    "whatwg-url": "14.1.0"
  },
  "dependencies": {
    "debug": "^4.4.3",
    "form-data": "^4.0.5",
    "node-fetch": "^2.7.0",
    "qs": "^6.14.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/busboy": "^0.2.4",
    "@types/debug": "^4.1.12",
    "@types/koa-router": "^7.4.9",
    "@types/node": "^22.10.1",
    "@types/tape": "^5.8.1",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "babel-eslint": "^10.1.0",
    "busboy": "^0.3.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "koa": "^3.1.1",
    "koa-bodyparser": "^4.4.1",
    "koa-qs": "^3.0.0",
    "koa-router": "^14.0.0",
    "nyc": "^17.1.0",
    "prettier": "^3.7.4",
    "tape": "^5.9.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
