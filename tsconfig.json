{
  "compilerOptions": {
    "strict": true,
    "newLine": "lf",
    "moduleResolution": "node16",
    "module": "node16",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "lib",
    "baseUrl": "./src",
    "paths": {
      "*": ["typings/*"]
    },
    "useDefineForClassFields": false,
    "target": "ES2022",
    "lib": ["ES2022", "DOM"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
