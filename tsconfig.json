{
  "compilerOptions": {
    "newLine": "lf",
    "module": "commonjs",
    "resolveJsonModule": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "outDir": "lib",
    "baseUrl": "./src",
    "paths": {
      "*": ["typings/*"]
    },
    "target": "ES2017",
    "lib": ["es7", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
